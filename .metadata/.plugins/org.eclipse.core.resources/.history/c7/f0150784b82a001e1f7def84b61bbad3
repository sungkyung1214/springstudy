<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- 객체 생성 -->
		<bean id="oracleDAO" class="ex05_Annotation.OracleDAO"></bean>
		<bean id="mysqlDAO" class="ex05_Annotation.MySQLDAO"></bean>	 

	 <!-- 의존성 주입 (DI) -->
	 	<!-- 먼저 만든 객체를 의존성주입 하기 위해서 ref 속성을 사용 -->
	 <bean id="service" class="ex05_Annotation.Service">
	 	<property name="dao" ref="oracleDAO" />
	 </bean>
	 
	 	
</beans>
